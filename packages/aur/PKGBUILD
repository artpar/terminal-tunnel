source_aarch64=("https://github.com/artpar/terminal-tunnel/releases/download/v${pkgver}/tt-linux-arm64.tar.gz")

sha256sums_x86_64=('4aca59fead5ac921b6415321a4730b96b4f652f6ad7c079b64340031702425be')
sha256sums_aarch64=('d26e47c5aee205d6c83e905b63710e0007785ba239adc3ef3ee3eb885f924a91')

package() {
    install -Dm755 "${srcdir}/tt" "${pkgdir}/usr/bin/tt"
}
